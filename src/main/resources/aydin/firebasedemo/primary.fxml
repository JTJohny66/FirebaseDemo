<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aydin.firebasedemo.PrimaryController">
    <children>
        <VBox alignment="CENTER" prefHeight="370.0" prefWidth="530.0" spacing="12.0">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20" />
            </padding>

            <children>

                <Label text="Data Access Screen (Read, Write, Register)" />

                <TextField fx:id="nameTextField" promptText="name" />
                <TextField fx:id="ageTextField" promptText="age" />
                <TextField fx:id="phoneTextField" promptText="phone number" />
                <TextField fx:id="passwordTextField" promptText="password (min 6 chars)" />

                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button fx:id="readButton" text="Read" onAction="#readButtonClicked" prefWidth="80"/>
                        <Button fx:id="writeButton" text="Write" onAction="#writeButtonClicked" prefWidth="80"/>
                        <Button fx:id="registerButton" text="Register User" onAction="#registerButtonClicked" prefWidth="120"/>
                        <Button fx:id="switchSecondaryViewButton" text="Switch to Secondary View" onAction="#switchToSecondary" prefWidth="180"/>
                    </children>
                </HBox>

                <TextArea fx:id="outputTextArea" prefWidth="500" prefHeight="220"/>

            </children>
        </VBox>
    </children>
</AnchorPane>
