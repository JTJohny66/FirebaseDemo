<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@style.css"

      fx:controller="aydin.firebasedemo.RegisterController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Create Account" style="-fx-font-size: 18px;"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <Button text="Register" onAction="#onRegisterClicked"/>
    <Button text="Back" onAction="#onBackClicked"/>

    <Label fx:id="messageLabel" textFill="red"/>
</VBox>
