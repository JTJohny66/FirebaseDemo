<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@style.css"

      fx:controller="aydin.firebasedemo.LoginController">
    <Label text="Sign In" style="-fx-font-size: 18px;"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Sign In" onAction="#onLoginClicked"/>
    <Button text="Back" onAction="#onBackClicked"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>
